<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Small">

    <ImageView
        android:id="@android:id/icon"
        style="@style/CardIcon"
        android:duplicateParentState="true"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_server_error_24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/home_icon_padding"
        android:duplicateParentState="true"
        android:orientation="vertical">

        <TextView
            android:id="@android:id/text1"
            style="@style/CardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            tools:text="Running (version 10)" />

        <TextView
            android:id="@android:id/text2"
            style="@style/CardSummary.Brief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true" />

        <Button
            android:id="@+id/btn_activity_log"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_activity_log"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>