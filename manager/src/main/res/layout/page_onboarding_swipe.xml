<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_swipe_title"
            android:textAppearance="?textAppearanceHeadlineMedium"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_swipe_desc"
            android:textAppearance="?textAppearanceBodyLarge"
            android:textColor="?colorOnSurfaceVariant"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="40dp" />

        <!-- Right swipe demo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/hint_icon_right"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_outline_play_arrow_24"
                android:background="@drawable/hint_icon_bg_green"
                android:padding="10dp"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/swipe_hint_right"
                android:textAppearance="?textAppearanceTitleMedium" />

        </LinearLayout>

        <!-- Left swipe demo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/hint_icon_left"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_outline_info_24"
                android:background="@drawable/hint_icon_bg_blue"
                android:padding="10dp"
                android:contentDescription="@null" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="@string/swipe_hint_left"
                android:textAppearance="?textAppearanceTitleMedium" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
